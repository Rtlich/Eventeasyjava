<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="800" style="-fx-background-color: #EEEEEE;" stylesheets="@../MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.eventeasy.controllers.back.MainWindowController">
    <AnchorPane minHeight="-Infinity" style="-fx-background-color: #BA877F;" prefWidth="200"
                AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0.0">
        <ImageView fitHeight="90.0" fitWidth="165" pickOnBounds="true" preserveRatio="true"
                   AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="0.0">
            <Image url="@../images/logo.png"/>
        </ImageView>

        <VBox layoutX="16.0" prefHeight="30.0" spacing="15.0" AnchorPane.bottomAnchor="15.0"
              AnchorPane.leftAnchor="16.0" AnchorPane.topAnchor="100.0">

            <Button fx:id="btnBookingLs" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#afficherBookingLs" text="Booking" textFill="WHITE">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Segoe UI Bold" size="15.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="btnLieus" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#afficherLieus" text="Leus"
                    textFill="WHITE">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Segoe UI Bold" size="15.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="btnCategoryLs" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#afficherCategoryLs" text="Categories Lieu" textFill="WHITE">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Segoe UI Bold" size="15.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>

        </VBox>

        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#logout" styleClass="danger-button" text="Logout" textFill="WHITE"
                AnchorPane.bottomAnchor="15" AnchorPane.leftAnchor="15" AnchorPane.rightAnchor="15">
            <font>
                <Font name="Segoe UI Bold" size="15.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

    </AnchorPane>

    <AnchorPane fx:id="content" layoutX="10.0" layoutY="10.0" style="-fx-background-color: #EEEEFF;"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0"/>
</AnchorPane>