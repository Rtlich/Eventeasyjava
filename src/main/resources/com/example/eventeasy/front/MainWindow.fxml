<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" maxHeight="1.7976931348623157E308" minHeight="-Infinity"
            minWidth="800.0"
            prefHeight="500.0" style="-fx-background-color: #EEEEEE;"
            stylesheets="@../MainStyle.css" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.example.eventeasy.controllers.front.MainWindowController">
    <AnchorPane fx:id="topBar" prefHeight="73.0" prefWidth="800.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ImageView fitHeight="60.0" fitWidth="160.0" layoutX="6.0" pickOnBounds="true" preserveRatio="true"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="6.0" AnchorPane.topAnchor="0.0">
            <Image url="@../images/logo.png"/>
        </ImageView>
        <HBox layoutX="16.0" prefHeight="30.0" spacing="15.0" stylesheets="@../MainStyle.css"
              AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="130.0" AnchorPane.topAnchor="15.0">

            <Button fx:id="btnAllocations" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#afficherAllocations" text="Allocations" textFill="WHITE">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Segoe UI Bold" size="15.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>

            <Button fx:id="btnCategoryAllocations" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#afficherCategoryAllocations" text="CategoryAllocations" textFill="WHITE">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Segoe UI Bold" size="15.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>


        </HBox>
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#logout" style="-fx-background-color: red;" text="Logout" textFill="WHITE"
                AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="15.0">
            <font>
                <Font name="Segoe UI Bold" size="15.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

    </AnchorPane>
    <AnchorPane fx:id="content" layoutX="10.0" layoutY="10.0" prefHeight="388.0" prefWidth="800.0"
                style="-fx-background-color: #EEEEFF;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0"/>
</AnchorPane>
