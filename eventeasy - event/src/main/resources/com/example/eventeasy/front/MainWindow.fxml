<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane id="AnchorPane" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" style="-fx-background-color: #EEEEEE;" stylesheets="@../MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.eventeasy.controllers.front.MainWindowController">
    <AnchorPane minHeight="-Infinity" style="-fx-background-color: #BA877F;" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">

        <ImageView fitHeight="50.0" fitWidth="160.0" layoutX="6.0" pickOnBounds="true" preserveRatio="true"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="0.0">
            <Image url="@../images/logo.png"/>
        </ImageView>

        <HBox layoutX="16.0" prefHeight="30.0" spacing="15.0" AnchorPane.bottomAnchor="15.0"
              AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">

            <Button fx:id="btnEvents" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#afficherEvents" text="Events" textFill="WHITE">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Segoe UI Bold" size="15.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>

        </HBox>

        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#logout" styleClass="danger-button" text="Logout" textFill="WHITE"
                AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <font>
                <Font name="Segoe UI Bold" size="15.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

    </AnchorPane>

    <AnchorPane fx:id="content" layoutX="10.0" layoutY="10.0" style="-fx-background-color: #EEEEFF;"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="60.0"/>
</AnchorPane>