<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="700.0" prefWidth="1100.0" styleClass="background-white" stylesheets="@MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.eventeasymaven.controllers.RegisterController">
    <AnchorPane prefHeight="700.0" prefWidth="500.0" styleClass="background-white" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <StackPane layoutX="38.0" layoutY="180.0" styleClass="bg-primary" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <ImageView fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@images/logo.png"/>
            </ImageView>
        </StackPane>
    </AnchorPane>
    <AnchorPane prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <Text fx:id="topText" strokeType="OUTSIDE" strokeWidth="0.0" text="texte haut">
                <font>
                    <Font name="Arial Bold" size="23.0"/>
                </font>
            </Text>
        </StackPane>
        <StackPane layoutX="50.0" layoutY="90.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox alignment="CENTER" StackPane.alignment="CENTER">

                <HBox alignment="CENTER">

                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email :">
                            <font>
                                <Font name="Arial" size="18.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="5.0"/>
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="emailTF" alignment="TOP_LEFT" promptText="Saisir email"
                                   styleClass="form-control"/>
                    </VBox>


                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password :">
                            <font>
                                <Font name="Arial" size="18.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="5.0"/>
                            </VBox.margin>
                        </Text>
                        <PasswordField fx:id="passwordTF" alignment="TOP_LEFT" promptText="Saisir password"
                                       styleClass="form-control"/>
                    </VBox>
                    <VBox.margin>
                        <Insets left="50.0" right="50.0"/>
                    </VBox.margin>

                </HBox>

                <HBox alignment="CENTER">

                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First name :">
                            <font>
                                <Font name="Arial" size="18.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="5.0"/>
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="fnameTF" alignment="TOP_LEFT" promptText="Saisir fname"
                                   styleClass="form-control"/>
                    </VBox>


                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last name :">
                            <font>
                                <Font name="Arial" size="18.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="5.0"/>
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="lnameTF" alignment="TOP_LEFT" promptText="Saisir lname"
                                   styleClass="form-control"/>
                    </VBox>
                    <VBox.margin>
                        <Insets left="50.0" right="50.0"/>
                    </VBox.margin>

                </HBox>

                <HBox alignment="CENTER">

                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phone number :">
                            <font>
                                <Font name="Arial" size="18.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="5.0"/>
                            </VBox.margin>
                        </Text>
                        <TextField fx:id="phonenumberTF" alignment="TOP_LEFT" promptText="Saisir phonenumber"
                                   styleClass="form-control"/>
                    </VBox>
                    <VBox.margin>
                        <Insets left="50.0" right="50.0"/>
                    </VBox.margin>

                </HBox>

                <AnchorPane id="AnchorPane" layoutX="14.0" layoutY="181.0">
                    <StackPane layoutY="45.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <ImageView fx:id="captchaIV" fitHeight="83.0" fitWidth="149.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </StackPane>
                    <Text layoutX="63.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Captcha :">
                        <font>
                            <Font name="Arial" size="18.0"/>
                        </font>
                    </Text>
                    <StackPane layoutX="99.0" layoutY="134.0" AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="0.0">
                        <HBox alignment="CENTER" StackPane.alignment="CENTER">
                            <TextField fx:id="captchaTF" prefHeight="25.0" prefWidth="89.0"
                                       promptText="Captcha">
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </TextField>
                            <Button mnemonicParsing="false" onAction="#resetCaptcha"
                                    prefHeight="25.0" prefWidth="53.0"
                                    style="-fx-background-color: #0f91f3;" text="Reset" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="12.0"/>
                                </font>
                            </Button>
                        </HBox>
                    </StackPane>
                </AnchorPane>

            </VBox>
        </StackPane>
        <StackPane layoutY="549.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <Button fx:id="btnAjout" mnemonicParsing="false" onAction="#manage" prefHeight="51.0" prefWidth="150.0"
                    styleClass="success-button" text="manipulation" textAlignment="CENTER" textFill="WHITE"
                    wrapText="true"/>
        </StackPane>
        <HBox alignment="CENTER" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Vous avez deja un compte ? "/>
            <Button mnemonicParsing="false" onAction="#connexion" style="-fx-background-color: #00000000;"
                    text="Connexion" textAlignment="CENTER" textFill="#0063fa" wrapText="true"/>
        </HBox>
    </AnchorPane>
</AnchorPane>
